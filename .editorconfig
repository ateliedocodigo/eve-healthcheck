root = true

[{*.{cfg,ini,json,py,yml},Makefile}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# Para arquivos JSON e YAML
[*.{json,yml}]
# Indentação em 2 espaços
indent_size = 2
# Para arquivos Makefile

[Makefile]
# Indentação deve ser por tabs
indent_style = tab
